{
  "manifest_version": 3,
  "name": "Email Paraphraser",
  "version": "1.0",
  "description": "A Chrome extension to paraphrase email content",
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["popup.js"],
      "run_at": "document_idle"
    }
  ]
}
